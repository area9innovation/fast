import string;
import math/math;

export {
	double2string(d : double) -> string;
}

// Still not decided whether this is required or not
double2string(d : double) -> string {
	v0 = d2s(d);
	if (strContains(v0, ".") 
		|| strContains(v0, "e") 
		|| strContains(v0, "E") 
		|| dfloor(d) == d) {
		v0
	} else v0 + ".0";
}
