import mini/types/typeenv;

export {
	// Lookup the type
	resolveMiniType2Var(env : MiniTypeEnv, tyvarId : int) -> MiniType2;
}

resolveMiniType2Var(env : MiniTypeEnv, tyvarId : int) -> MiniType2 {
	mtype : Maybe<MiniType2> = lookupTree(^(env.tyvars), tyvarId);

	mtype ?? {
		mtype
	} : {
		println("Could not resolve tyvar " + i2s(tyvarId));
		MiniType2Var(tyvarId);
	};
}
